body
    margin: 0
    background-color: #f5f5f5
    font-family: Helvetica

nav
    display: block
    height: 60px
    background-color: #6b6b6b
    border-bottom: 5px solid #383838
    ul
        display: inline-block
        margin: 0
        padding: 0
        list-style-type: none
        &.right
            float: right
        li
            height: 60px
            display: inline-block
            a
                font-size: 180%
                padding: 15px
                line-height: 2
                color: #ddd
                text-decoration: none
                text-transform: uppercase
                font-weight: bold
                &:hover
                    background-color: #868686

.wrapper
    min-height: 100vh
    overflow: hidden
    .container
        overflow: hidden
        padding: 10px
